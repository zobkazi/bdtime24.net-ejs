<!-- views/newsDetails.ejs -->
<html>

    <head>
        <title>News Details</title>
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    </head>

    <body class="bg-gray-100">
        <div class="container mx-auto py-8">
            <div class="bg-white shadow-md rounded p-4">
                <h2 class="text-2xl font-bold mb-2">
                    <%= news.title %>
                </h2>
                <p class="text-gray-700 mb-4">
                    <%= news.description %>
                </p>
               
<figure class="relative max-w-sm ">
    <a href="#">
        <img class="rounded-lg"
            src="<%= news.image %>"
            alt="<%= news.title %>">
    </a>
    <figcaption class="absolute px-4 text-lg text-white font-bold  bottom-6">
        <%= news.title %>
    </figcaption>
</figure>

<p class="text-sm text-gray-500">Author: <%= news.author %>
</p>
<p class="text-sm text-gray-500">Tag: <%= news.tag %>
</p>

                <a href="/news"
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded inline-block">Back to
                    News</a>
            </div>
        </div>
    </body>

</html>